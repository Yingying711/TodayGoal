<view wx:for="{{display}}">
  
  <scroll-view 
    scroll-y
    style="height: 6; display: flex;"
    bindscrolltoupper="upper"
    bindscrolltolower="lower"
    bindscroll="scroll"
  >
    <button bindtap='showDetails' class='button1' data-id='{{item.day._id}}'>{{item.day.date}} 完成度：{{item.completion}}</button>
    <view class='gapLine'>------------------------</view>
  </scroll-view>
</view>








